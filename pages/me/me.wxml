<scroll-view scroll-x='{{false}}'>
<view class="me-container">
  <view class='head-background'></view>
  <view class='me-card'>
    <view class='myTx'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='myName'>
      <open-data type="userNickName"></open-data>
    </view>
    <view class='mySchool'>学校：上海海事大学</view>
    <view class='mySex'>性别：{{sex[index]}}</view>
    <view class='myBirth'>生日：1997-01-29</view>
  </view>
  <view class='myPost-container' bindtap='mypost'>
    <view class='myPost'>我的帖子</view>
    <view class='arrow-container'>
      <image src='/images/tabBar/arrow.png' class='arrow'></image>
    </view>
  </view>
  <view class='myClo-container' bindtap='myclo'>
    <view class='myClo'>我的收藏</view>
    <view class='arrow-container'>
      <image src='/images/tabBar/arrow.png' class='arrow'></image>
    </view>
  </view>
</view>
</scroll-view>