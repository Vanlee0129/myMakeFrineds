@import 'weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.bar {
  height: 45px;
  background: #4acbbd;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  line-height: 45px;
  color: white;
  font-weight: 500;
}

/**bar**/

.bar {
  height: 10vh;
  background-color: #fff;
  border-top: 0.5rpx solid #aaa;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
}

.icons image {
  margin-top: 1vh;
  margin-bottom: 0;
  height: 45rpx;
  width: 45rpx;
  margin-left: 110rpx;
  float: left;
}

.txt {
  clear: left;
  margin-left: 107rpx;
  font-size: 18rpx;
}

.txt text {
  margin-right: 112rpx;
}

